<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".RegistroActivity">

    <ImageView
        android:id="@+id/registerActivityImagenView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_ball_soccer"
        android:tint="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerActivityImagenView"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textColor="@color/textColorLight"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nombreUsuario"
            style="@style/RegisterActivityText"
            android:hint="Nombre de usuario" />

        <EditText
            android:id="@+id/registroEmail"
            style="@style/RegisterActivityText"
            android:hint="Correo electronico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/registroPassword"
            style="@style/RegisterActivityText"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/retypePassword"
            style="@style/RegisterActivityText"
            android:hint="Repita Contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradientbuttonlight"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/registerActivityLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="¿Ya tienes cuenta? Entrar " />

</RelativeLayout>